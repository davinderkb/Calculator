<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NumButtonFontStyle">
        <item name="android:textSize">@dimen/numberButtonSize</item>
    </style>

    <style name="OperatorButtonFontStyle">
        <item name="android:textSize">@dimen/operatorButtonSize</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InputTextViewStyle">
        <!--item name="android:background">@drawable/text_field_default</item-->
        <item name="android:textSize">25sp</item>
        <item name="android:padding">@dimen/paddingSpace</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OutputTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:padding">@dimen/paddingSpace</item>
        <item name="android:textColor">@color/dim</item>
    </style>
</resources>
